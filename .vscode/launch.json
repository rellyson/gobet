{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/gobet/main.go",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch package in debug mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/gobet/main.go",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch package in dev mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${userHome}/go/bin/air",
            "args": [
                "-c",
                "${workspaceFolder}/.air.toml"
            ],
            "console": "integratedTerminal"
        }
    ]
}